@model DryPro.Inventory.Management.UI.Models.InventoryManageViewModel
@using DryPro.Inventory.Management.Common.Enums

@{
    ViewData["Title"] = "Manage";

}

<br />
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h4>Inventory</h4>
        </div>
        <div class="col-md-2">
            <a asp-action="SaveAll" class="btn btn-primary w-100">Save All</a>
        </div>
    </div>
</div>
<hr />
<table class="table table-striped table-secondary" style="width:100%">
    <thead>
        <tr>
            <th>Type</th>
            <th>Color</th>
            <th>Remaining</th>
            <th>Sold</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Inventory.Count(); i++)
        {
            var item = Model.Inventory.ElementAt(i);
            <tr>
                <td width="30%">@item.Type</td>
                <td width="25%">@item.Color</td>
                <td width="15%" class="text-center">
                    <div class="btn-group" role="group">
                        <input id="@(string.Format("remainingCount{0}", i))" asp-for="@item.Remaining" class="form-control" />
                    </div>
                </td>
                <td width="15%" class="text-center">
                    <div class="btn-group" role="group">
                        <input id="@(string.Format("soldCount{0}", i))" asp-for="@item.Sold" class="form-control" />
                    </div>
                </td>
                <td width="15%">
                    <a class="btn btn-success w-75 btnSaveAlert" onclick="Save(@i.ToString())">Save</a>
                    <input id="@(string.Format("id{0}", i))" type="hidden" asp-for="@item._id" />
                    <input id="@(string.Format("itemType{0}", i))" type="hidden" asp-for="@item.Type" />
                    <input id="@(string.Format("itemColor{0}", i))" type="hidden" asp-for="@item.Color" />
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container p-5">
    <div class="alert-popup text-center">
        <div class="col-lg-6 col-md-12 m-auto">
            <div class="alert alert-success fade show" role="alert">
                <strong>Success!</strong>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function Save(num) {
            var id = $("#id" + num).val();
            var type = $("#itemType" + num).val();
            var color = $("#itemColor" + num).val();
            var remaining = $("#remainingCount" + num).val();
            var sold = $("#soldCount" + num).val();
            var data = {
                id: id, type: type, color: color, remaining: remaining, sold: sold
            };
            $.ajax({
                url: '@Url.Action("Save", "Inventory")',
                type: 'POST',
                cache: false,
                data: { data: JSON.stringify(data) }
            });
        }

        $(document).ready(function () {
            $(".alert").hide();
        });

        $(".btnSaveAlert").on("click", function () {
            $(".alert").show(100);
            $(".alert").delay(1500).hide(200);
        });
    </script>
    <style>
        .alert-popup {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            color: white;
        }
    </style>
}
