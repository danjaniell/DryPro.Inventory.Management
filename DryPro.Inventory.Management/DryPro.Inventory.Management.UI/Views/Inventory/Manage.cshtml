@model DryPro.Inventory.Management.UI.Models.InventoryManageViewModel
@using DryPro.Inventory.Management.Common.Enums

@{
    ViewData["Title"] = "Manage";
}

<a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-alt-circle-left"></i></a>
<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h4>Inventory</h4>
        </div>
        <div class="col-md-2">
            <a asp-action="SaveAll" class="btn btn-primary w-100">Save All</a>
        </div>
    </div>
</div>
<hr />
<table class="table table-striped table-secondary" style="width:100%">
    <thead>
        <tr>
            <th>Type</th>
            <th>Color</th>
            <th>Remaining</th>
            <th>Sold</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Inventory)
        {
            <tr>
                <td width="30%">@item.Type</td>
                <td width="25%">@item.Color</td>
                <td width="15%" class="text-center">
                    <div class="btn-group" role="group">
                        <input id="remainingCount" asp-for="@item.Remaining" class="form-control" />
                    </div>
                </td>
                <td width="15%" class="text-center">
                    <div class="btn-group" role="group">
                        <input id="soldCount" asp-for="@item.Sold" class="form-control" />
                    </div>
                </td>
                <td width="15%">
                    <a class="btn btn-success w-75" onclick="Save()">Save</a>
                    <input id="id" type="hidden" asp-for="@item._id" />
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function Save() {
            var id = $("#id").val();
            var remaining = $("#remainingCount").val();
            var sold = $("#soldCount").val();
            var data = {
                id: id, remaining: remaining, sold: sold
            };
            $.ajax({
                url: '@Url.Action("Save", "Inventory")',
                type: 'POST',
                cache: false,
                data: { data: JSON.stringify(data) }
            });
        }
    </script>
}
