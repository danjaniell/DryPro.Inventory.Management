@model IEnumerable<DryPro.Inventory.Management.Core.Entities.AuxilliaryItem>
@{
    ViewData["Title"] = "Create";
    var auxItem = new DryPro.Inventory.Management.Core.Entities.AuxilliaryItem();
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@auxItem.Name" class="control-label"></label>
                <input asp-for="@auxItem.Name" class="form-control" />
                <span asp-validation-for="@auxItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@auxItem.Cost" class="control-label"></label>
                <input asp-for="@auxItem.Cost" class="form-control" />
                <span asp-validation-for="@auxItem.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@auxItem.Description" class="control-label"></label>
                <input asp-for="@auxItem.Description" class="form-control" />
                <span asp-validation-for="@auxItem.Description" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
