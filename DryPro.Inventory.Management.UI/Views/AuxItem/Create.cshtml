@model DryPro.Inventory.Management.UI.Models.AuxItemCreateViewModel;
@{ 
    ViewData["Title"] = "Create";
    Model.Current = new DryPro.Inventory.Management.Core.Entities.AuxilliaryItem();
}

<div class="modal fade" id="add-auxItem" tabindex="-1" role="dialog" aria-labelledby="addAuxItem">
    <div class="modal-dialog" style="width:501px !important;margin:0 auto;">
        <div class="modal-content">
            <div class="modal-header" style="background: #01A1EC; color: white;">
                <h4 class="modal-title" id="add-auxItem">
                    Add Auxilliary Item
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="Current.Name" class="control-label"></label>
                                            <input id="auxItemName" class="form-control" />
                                            <span asp-validation-for="Current.Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Current.Cost" class="control-label"></label>
                                            <input id="auxItemCost" class="form-control" />
                                            <span asp-validation-for="Current.Cost" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Current.Description" class="control-label"></label>
                                            <input id="auxItemDesc" class="form-control" />
                                            <span asp-validation-for="Current.Description" class="text-danger"></span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Add" onclick="AddAuxItem()" />
                    @*<a asp-controller="AuxItem" asp-action="Create" class="btn btn-success">Add</a>*@
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var _auxilliaryItems;

    var InitCreateAuxItem = function (auxilliaryItems) {
        _auxilliaryItems = auxilliaryItems;
    }

    var AddAuxItem = function () {
        var name = $("#auxItemName").val();
        var cost = $("#auxItemCost").val();
        var desc = $("#auxItemDesc").val();
        $.ajax({
            url: '@Url.Action("Create", "AuxItem")',
            type: 'POST',
            cache: false,
            data: { auxItems: _auxilliaryItems, name: name, cost: cost, description: desc },
            success: function (results) {
                $("#add-auxItem").modal('hide');
                document.location.reload(true);
            }
        });
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
