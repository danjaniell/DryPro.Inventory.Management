@model IEnumerable<DryPro.Inventory.Management.Core.Entities.AuxilliaryItem>
@{
    ViewData["Title"] = "Create";
    var auxItem = new DryPro.Inventory.Management.Core.Entities.AuxilliaryItem();
}

<div class="modal fade" id="add-auxItem" tabindex="-1" role="dialog" aria-labelledby="addAuxItem">
    <div class="modal-dialog" style="width:501px !important;margin:0 auto;">
        <div class="modal-content">
            <div class="modal-header" style="background:#d9534f;color:white;">
                <h4 class="modal-title" id="add-auxItem">
                    Add Auxilliary Item
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-10">
                            <div class="row">
                                <div class="col-md-4">
                                    <form asp-action="Create">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="@auxItem.Name" class="control-label"></label>
                                            <input asp-for="@auxItem.Name" class="form-control" />
                                            <span asp-validation-for="@auxItem.Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@auxItem.Cost" class="control-label"></label>
                                            <input asp-for="@auxItem.Cost" class="form-control" />
                                            <span asp-validation-for="@auxItem.Cost" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@auxItem.Description" class="control-label"></label>
                                            <input asp-for="@auxItem.Description" class="form-control" />
                                            <span asp-validation-for="@auxItem.Description" class="text-danger"></span>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success" value="Add" onclick="AddAuxItem()" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
