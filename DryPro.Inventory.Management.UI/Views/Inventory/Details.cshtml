@model DryPro.Inventory.Management.UI.Models.InventoryDetailsViewModel
@{
    ViewData["Title"] = "Details";
}


<div>
    <a asp-action="Index" class="btn btn-success"><i class="fas fa-arrow-alt-circle-left"></i></a>
    <h1>Details</h1>
</div>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.SellingPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.SellingPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.SoldPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.SoldPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.AuxilliaryItems)
        </dt>
        <dd class="col-sm-10">
            <partial name="_AuxItemDetails" for="@Model.Product.AuxilliaryItems" />
        </dd>
    </dl>
</div>
<div>
    <div class="form-group row">
        <div class="col-8 offset-4 row">
            <div class="col">
                <a asp-action="Edit" asp-route-id="@Model.Product.Guid" class="btn btn-info w-100"><i class="far fa-edit"></i> Edit</a>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i> Back</a>
            </div>
        </div>
    </div>
</div>
