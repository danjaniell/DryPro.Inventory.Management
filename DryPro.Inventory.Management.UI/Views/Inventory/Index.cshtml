@model IEnumerable<DryPro.Inventory.Management.Core.Entities.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Inventory</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Create New</a>
</p>
<table class="table table-striped table-secondary" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoldPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                Profit
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td width="15%">@item.Type</td>
            <td width="10%">@item.Color</td>
            <td width="10%">@item.SellingPrice</td>
            <td width="10%">@item.SoldPrice</td>
            <td width="10%">@item.Cost</td>
            <td width="10%">@item.Discount</td>
            <td width="30%">@((item.SoldPrice - item.Cost).ToString("c"))</td>
            <td class="text-center">
                <div class="btn-group" role="group">
                    <a class="btn btn-primary mx-1" asp-action="Details" asp-route-id="@item.Guid"><i class="fas fa-info-circle"></i></a>
                    <a class="btn btn-primary mx-1" asp-action="Edit" asp-route-id="@item.Guid"><i class="far fa-edit"></i></a>
                    <a class="btn btn-danger mx-1" asp-action="Delete" asp-route-id="@item.Guid"><i class="far fa-trash-alt"></i></a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
